package com.jlc50programe;

import java.util.Scanner;

//Q. Wtap to find the sum of individual digits of given numbers
public class Test16 {
	public static void main(String[] args) {
		int sum = 0;
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the Number");
		int n = sc.nextInt();

		while (n != 0) {
			int digit = n % 10;
			sum = sum + digit;
			n = n / 10;

		}

		sc.close();
	}

}
